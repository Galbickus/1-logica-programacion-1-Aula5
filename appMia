let numHasta = 1000;
let cantIntenPermi = 6

let numeroSecreto = Math.floor(Math.random()*numHasta)+1;
let contadorIntentos = 0;

while (contadorIntentos<= cantIntenPermi) {
    let numeroUsuario = parseInt(prompt(`Ingresá un número entre 1 y ${numHasta}: `));
    contadorIntentos++;
    if (numeroSecreto==numeroUsuario) {
        alert(`Felicidades! Acertaste al ${numeroSecreto} en ${contadorIntentos} ${(contadorIntentos==1?"vez":"veces")}`);
        break;
    } else {
        if (numeroUsuario<numeroSecreto) {
            alert(`No acertaste. El número secreto es mayor que ${numeroUsuario}`);
        } else {
            alert(`No acertaste. El número secreto es menor que ${numeroUsuario}`);
        }
    }
}
alert(`Lo siento superaste la cantidad de ${cantIntenPermi} intentos permitidos`);
